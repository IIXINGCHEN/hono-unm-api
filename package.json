{
  "name": "hono-unm-api-prod",
  "version": "1.0.6",
  "description": "基于 Hono 的网易云解灰 API 服务",
  "type": "module",
  "main": "dist/server.js",
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "predev": "echo \"提示：开发模式推荐使用 Bun 以获得最佳实时重载体验，或根据需要调整脚本使用 ts-node-dev/nodemon。\""
  },
  "keywords": [
    "hono",
    "api",
    "unblockneteasemusic",
    "typescript"
  ],
  "author": "API Architect",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/zod-validator": "^0.3.0",
    "@unblockneteasemusic/server": "latest",
    "dotenv": "^16.5.0",
    "hono": "^4.5.0",
    "pino": "^9.4.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^20.15.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-hono": "^0.3.2",
    "eslint-plugin-prettier": "^5.1.3",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.4.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
