{
  "name": "hono-unm-api-prod",
  "version": "1.0.6",
  "description": "基于 Hono 的网易云解灰 API 服务",
  "type": "module",
  "main": "dist/server.js",
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "predev": "echo \"提示：开发模式推荐使用 Bun 以获得最佳实时重载体验，或根据需要调整脚本使用 ts-node-dev/nodemon。\""
  },
  "keywords": [
    "hono",
    "api",
    "unblockneteasemusic",
    "typescript"
  ],
  "author": "API Architect",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.11.4",
    "@hono/zod-validator": "^0.2.2",
    "@hono/cors": "^0.1.2",
    "@hono/static-file": "^0.1.0",
    "@unblockneteasemusic/server": "latest",
    "dotenv": "^16.4.5",
    "hono": "^4.4.13",
    "pino": "^9.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-hono": "^0.1.1",
    "eslint-plugin-prettier": "^5.1.3",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
