{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": true,
    "lib": [
      "ES2022"
    ]
  },
  "include": [
    "src/**/*.ts",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}