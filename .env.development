# 服务配置
NODE_ENV=development
PORT=5678
HOST=0.0.0.0

# 日志级别 (development: debug, info, warn, error, fatal)
LOG_LEVEL=debug

# CORS 配置 (多个用逗号分隔)
# 开发环境允许所有跨域访问
ALLOWED_ORIGINS=*

# API 代理 (可选, 如果为空则不启用)
PROXY_URL=

# 外部音乐 API
EXTERNAL_MUSIC_API_URL=https://music-api.gdstudio.xyz/api.php

# UnblockNeteaseMusic 服务特定配置
ENABLE_FLAC=true

# 应用版本 (通常从 package.json 读取)
APP_VERSION=1.0.6

# 服务名称 (用于日志)
APP_NAME=hono-unm-api-dev

# 安全配置
# 速率限制配置 (每个IP在指定时间窗口内的最大请求数)
# 开发环境设置较高的限制
RATE_LIMIT_MAX=1000
# 速率限制时间窗口 (毫秒) - 15分钟
RATE_LIMIT_WINDOW_MS=900000

# 用于加密敏感数据的密钥 (32字节)
ENCRYPTION_KEY=dev-secure-encryption-key-for-development

# JWT密钥 (用于API认证，如果需要)
JWT_SECRET=dev-secure-jwt-secret-for-development

# 安全头配置
# 开发环境禁用严格的内容安全策略
ENABLE_STRICT_CSP=false

# 开发环境禁用API密钥验证
API_KEY_ENABLED=false
