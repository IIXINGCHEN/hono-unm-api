# 服务配置
NODE_ENV=production
PORT=5678
HOST=0.0.0.0

# 日志级别 (production: info, warn, error, fatal)
LOG_LEVEL=info

# CORS 配置 (多个用逗号分隔)
# 生产环境限制跨域访问
ALLOWED_ORIGINS=

# API 代理 (可选, 如果为空则不启用)
PROXY_URL=

# 外部音乐 API
EXTERNAL_MUSIC_API_URL=https://music-api.gdstudio.xyz/api.php

# UnblockNeteaseMusic 服务特定配置
ENABLE_FLAC=true

# 应用版本 (通常从 package.json 读取)
APP_VERSION=1.0.6

# 服务名称 (用于日志)
APP_NAME=hono-unm-api-prod

# 安全配置
# 速率限制配置 (每个IP在指定时间窗口内的最大请求数)
# 生产环境设置合理的限制
RATE_LIMIT_MAX=100
# 速率限制时间窗口 (毫秒) - 15分钟
RATE_LIMIT_WINDOW_MS=900000

# 用于加密敏感数据的密钥 (32字节)
ENCRYPTION_KEY=prod-secure-encryption-key-for-production

# JWT密钥 (用于API认证，如果需要)
JWT_SECRET=prod-secure-jwt-secret-for-production

# 安全头配置
# 是否启用严格的内容安全策略
ENABLE_STRICT_CSP=true
